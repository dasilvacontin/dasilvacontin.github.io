{
  "name": "dasilvacontin.github.io",
  "version": "2.0.0",
  "description": "My personal website / project hub.",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/dasilvacontin/dasilvacontin.github.io.git"
  },
  "scripts": {
    "lint": "eslint src",
    "typecheck": "flow",
    "pretest": "npm run lint && npm run typecheck",
    "test": "mocha --compilers js:babel-register",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --compilers js:babel-register",
    "ci": "dot-only-hunter && npm run coverage && cat ./coverage/lcov.info | coveralls",
    "build": "browserify src/main.js -o js/bundle.js --exclude cls-bluebird -t babelify",
    "watch:build": "chokidar 'src' -c 'npm run build'",
    "prepublish": "npm run build"
  },
  "author": "David da Silva <dasilvacontin@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.3.5",
    "gh-emoji": "^0.2.5",
    "howler": "^1.1.29",
    "lodash": "^4.11.1",
    "request-promise": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-eslint": "^6.0.2",
    "babel-plugin-lodash": "^2.3.0",
    "babel-plugin-syntax-flow": "^6.5.0",
    "babel-plugin-transform-flow-strip-types": "^6.7.0",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "babel-runtime": "^6.6.1",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.9",
    "dot-only-hunter": "^1.0.2",
    "eslint": "^2.8.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-flow-vars": "^0.3.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "flow-bin": "^0.23.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.4.5",
    "unexpected": "^10.13.0"
  }
}
